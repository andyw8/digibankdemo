<section class="dashboard">
  <div class="title">
    <h2>Dashboard</h2>

    <b>Account balance:</b>
    <%= number_to_currency(@dashboard.balance, unit: @dashboard.currency) %>
    <hr>
    <div>
      <%= link_to "Make transfer", new_transfer_path %>
    </div>
    <div>
      <%= link_to "Sign out", sign_out_path, method: :delete %>
    </div>
  </div>

  <div class="main">
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Transaction</th>
          <th>Description</th>
          <th>Funds received</th>
          <th>Funds paid</th>
          <th>Balance</th>
        </tr>
      </thead>
      <tbody>
        <%= render @dashboard.transactions %>
      </tbody>
    </table>
  </div>
</section>
